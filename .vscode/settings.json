{
  "editor.detectIndentation": false,
  "typescript.extension.sortImports.maxNamedImportsInSingleLine": 10,
  "typescript.extension.sortImports.sortOnSave": true,
  "editor.tabSize": 2,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.sortJSON": true
  },
  "cSpell.ignorePaths": [
    "**/package-lock.json",
    "**/node_modules/**",
    "**/vscode-extension/**",
    "**/.git/objects/**",
    ".vscode",
    ".vscode-insiders",
    ".env*",
    "src/i18n/"
  ],
  "cSpell.ignoreWords": [
    "nestjs",
    "tryme",
    "pino",
    "Authed",
    "middlewares",
    "consts",
    "fanout"
  ],
  "sortJSON.excludedFiles": ["package.json", "package-lock.json"]
}

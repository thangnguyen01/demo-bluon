{
  "compilerOptions": {
    "paths": {
      "*": ["node_modules/*"],
      "src/*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2017",
    "skipLibCheck": true,
    "noImplicitOverride": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.json"]
}
